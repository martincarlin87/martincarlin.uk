
{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
  <article class="{{post_class}}">
    <section class="section is-relative">
      <div class="container">
        <div class="columns">
          <div class="column has-text-centered">
            <a href="{{url}}">
              <h2 class="title is-underlined is-relative is-inline-block post-title">
                <strong>{{title}}</strong>
              </h2>
            </a>
            <div class="columns">
              <div class="column post-meta">
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
                  Posted on {{date format="DD MMMM YYYY"}}
                </time>
                {{tags prefix=" in "}}
              </div>
            </div>
          </div>
        </div>
        <div class="columns">
          <div class="column">
            {{content}}
          </div>
        </div>
      </div>
    </section>
  </article>
{{/foreach}}
